<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!--place this file in a folder where webapps folder exists!  -->
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<!--database configuration-->
	
	<entry key="driver">com.mysql.jdbc.Driver</entry>
	<entry key="url">jdbc:mysql://localhost:3306</entry>
	
	<!--database users-->
	
	<entry key="root-user">root</entry>
    <entry key="root-password">password</entry>
	
	<!--gmail credentials-->
	<entry key="mail-id">mailid</entry>
	<entry key="mail-password">password</entry>
	
</properties>
